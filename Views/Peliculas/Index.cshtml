@model IEnumerable<Pelicula>

@{
    ViewData["Titulo"] = "Lista de Peliculas";
}

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                   @item.NombrePelicula
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.FotoPerfilPelicula" width="100" alt="@item.NombrePelicula">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.DescripcionPelicula</p>                           
                            <p class="card-text"><b>Category: </b>@item.CategoriaPelicula</p>                          
                            
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.IdPelicula">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>                                
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }


</div>
