@model IEnumerable<Actor>

@{ 
    ViewData["Titulo"] = "Lista de Actores";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.FotoPerfilActor)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreActor)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.FotoPerfilActor" alt="@item.NombreActor" style="max-width:150px"/>

                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.NombreActor)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit </a>
                        <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Detail </a>
                        <a class="btn btn-outline-danger text-black"><i class="bi bi-trash"></i> Delete </a>
                    </td>                   
                </tr>
                }
            </tbody>
            

        </table>

    </div>


</div>
<div style="position:fixed; right: 25px; bottom: 25px;"  class="text-white">
    <a asp-controller= "Actors" asp-action= "Create" class="btn btn-success"><i class="bi bi-plus-circle">
    </i>Agregar</a>
</div>

