@model IEnumerable<Director>

@{
    ViewData["Titulo"] = "Lista de Directores";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="txt-center">
                    <th>@Html.DisplayNameFor(model => model.FotoPerfilDirector)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreDirector)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.FotoPerfilDirector" alt="@item.NombreDirector" style="max-width:150px" />

                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.NombreDirector)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit </a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Detail </a>
                            <a class="btn btn-outline-danger text-black"><i class="bi bi-trash"></i> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>


        </table>

    </div>


</div>

